<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"    tools:context="com.javatechig.gridviewexample.DetailView">    <ImageView        android:layout_width="fill_parent"        android:layout_height="150dp"        android:id="@+id/imageView"        android:scaleType="center"        android:layout_alignParentTop="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_alignParentRight="true"        android:layout_alignParentEnd="true"        android:contentDescription="carImage"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="New Text"        android:id="@+id/carMakeLabel"        android:textSize="@dimen/font_size"        android:layout_below="@+id/imageView"        android:textAlignment="center"        android:textColor="@color/blue"        android:layout_centerHorizontal="true"        android:layout_marginTop="27dp"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="New Text"        android:id="@+id/carModelLabel"        android:textColor="@color/blue"        android:textSize="@dimen/font_size"        android:textAlignment="center"        android:layout_marginTop="34dp"        android:layout_below="@+id/carMakeLabel"        android:layout_centerHorizontal="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="New Text"        android:textAlignment="center"        android:textSize="@dimen/font_size"        android:id="@+id/carRegLabel"        android:textColor="@color/blue"        android:layout_marginTop="40dp"        android:layout_below="@+id/carModelLabel"        android:layout_centerHorizontal="true"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="New Text"        android:textAlignment="center"        android:textColor="@color/blue"        android:textSize="@dimen/font_size"        android:id="@+id/carYearLabel"        android:layout_marginTop="33dp"        android:layout_below="@+id/carRegLabel"        android:layout_alignLeft="@+id/carRegLabel"        android:layout_alignStart="@+id/carRegLabel"/></RelativeLayout>